generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coach {
  id          String @id @default(dbgenerated("gen_random_uuid()"))
  name        String
  phoneNumber String

  CoachSchedule CoachSchedule[]
}

model Student {
  id          String @id @default(dbgenerated("gen_random_uuid()"))
  name        String
  phoneNumber String

  CoachSchedule CoachSchedule[]
}

model CoachSchedule {
  id      Int    @id @default(autoincrement())
  coach   Coach  @relation(fields: [coachId], references: [id])
  coachId String

  startTime DateTime
  endTime   DateTime

  // Could potential go into a table like `Bookings` to keep this 
  // booking related data separate from Coach schedules but for simplicity
  // and time constraints, we'll have booking information live directly in the model
  booked          Boolean @default(false)
  bookedStudent   Student @relation(fields: [bookedStudentId], references: [id])
  bookedStudentId String
}
